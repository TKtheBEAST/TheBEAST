<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <activity
        android:id="@+id/testFragment"
        android:name="com.example.thebeast.StartActivity"
        android:label="TestFragment" >
        <action
            android:id="@+id/action_testFragment_to_login"
            app:destination="@id/login" />
    </activity>
    <fragment
        android:id="@+id/splashScreen"
        android:label="SplashScreen" >
        <action
            android:id="@+id/action_splashScreen_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:label="login" >
        <action
            android:id="@+id/action_login_to_registrieren"
            app:destination="@id/registrieren" />
        <action
            android:id="@+id/action_login_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrieren"
        android:label="registrieren" >
        <action
            android:id="@+id/action_registrieren_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
</navigation>